#!/usr/bin/env node

/**
 * Module dependencies.
 */

 var app = require('../app');
var debug = require('debug')('chatbottest:server');
var http = require('http'),
    https = require('https'),
    fs    = require('fs'),
    express = require('express')


var options = {
  ca : fs.readFileSync('../ibrothers_kr.ca-bundle','utf8'),
  key:fs.readFileSync('../ibrothers_kr.key','utf8'),
    cert:fs.readFileSync('../ibrothers_kr.crt','utf8')
};



https.createServer(options, app).listen(443, function(){
    console.log("Https server listening on port " + 443);
});
